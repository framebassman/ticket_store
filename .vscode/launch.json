{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "TicketStore.Api",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/Services/TicketStore.Api/bin/Debug/netcoreapp2.2/TicketStore.Api.dll",
            "args": [],
            "cwd": "${workspaceFolder}/TicketStore.Api",
            "stopAtEntry": false,
            "internalConsoleOptions": "openOnSessionStart",
            "serverReadyAction": {
              "action": "openExternally",
              "pattern": "^\\s*Now listening on:\\s+http://\\S+:([0-9]+)",
              "uriFormat": "http://localhost:%s/healthcheck"
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            },
            "sourceFileMap": {
                "/Views": "${workspaceFolder}/Views"
            }
        },
        {
          "name": "TicketStore.Web",
          "type": "coreclr",
          "request": "launch",
          "preLaunchTask": "build",
          "program": "${workspaceFolder}/Services/TicketStore.Web/bin/Debug/netcoreapp2.2/TicketStore.Web.dll",
          "args": [],
          "cwd": "${workspaceFolder}/TicketStore.Web",
          "stopAtEntry": false,
          "internalConsoleOptions": "openOnSessionStart",
          "serverReadyAction": {
            "action": "openExternally",
            "pattern": "^\\s*Now listening on:\\s+http://\\S+:([0-9]+)"
          },
          "env": {
              "ASPNETCORE_ENVIRONMENT": "Development"
          },
          "sourceFileMap": {
              "/Views": "${workspaceFolder}/Views"
          }
      },
        {
            "name": ".NET Core Attach",
            "type": "coreclr",
            "request": "attach",
            "processId": "${command:pickProcess}"
        }
    ]
  }
  