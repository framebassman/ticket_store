{
  "AllowedHosts": "*",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args":
        {
          "theme": "Serilog.Sinks.SystemConsole.Themes.AnsiConsoleTheme::Code, Serilog.Sinks.Console",
          "outputTemplate": "[{Timestamp:o} {Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
          "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter,Serilog.Formatting.Compact"
        }
      },
      {
        "Name" :"Async",
        "Args": {
          "configure": [
            {
              "Name": "RollingFile",
              "Args": {
                "pathFormat": "logs/log-{Date}.log",
                "outputTemplate": "[{Timestamp:o} {Level:u3}] ({Application}/{MachineName}/{ThreadId}) {Message}{NewLine}{Exception}",
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter,Serilog.Formatting.Compact"
              }
            }
          ]
        }
      },
      {
        "Name": "Sentry",
        "Args":
        {
          "MinimumBreadcrumbLevel": "Debug",
          "MinimumEventLevel": "Error"
        }
      },
      {
        "Name": "Elasticsearch",
        "Args":
        {
          "nodeUris": "http://elk.chertopolokh.ru:9200",
          "connectionGlobalHeaders": "Authorization=Basic ZWxhc3RpYzpwOHV3VTl5Ym40RzJKTVNI",
          "indexFormat": "custom-index-{0:yyyy.MM}",
          "templateName": "myCustomTemplate",
          "minimumLogEventLevel": "Information"
        }
      }
    ],
    "Enrich": ["WithThreadId", "FromLogContext", "WithMachineName"],
    "Properties": {
      "Application": "TicketStore.Web"
    }
  },
  "Sentry": {
    "Dsn": "https://88ed8380e55042be9937e4b42fd95726@sentry.io/1418218",
    "IncludeRequestPayload": true
  },
  "Robotify": {
    "Enabled": true,
    "SitemapUrl": "https://chertopolokh.ru/sitemap",
    "CrawDelay": 10,
    "DisableFileHeaderComments" : true,
    "Groups": [
      {
        "UserAgent": "*",
        "Allow": ["/"]
      },
      {
        "UserAgent": "Yandexbot",
        "Disallow": ["/login"]
      },
      {
        "UserAgent": "Googlebot",
        "Disallow": ["/login"]
      }
    ]
  }
}
